<h1>Edit Post <%= link_to "Cancel", posts_path %></h1>

<div class="form">

    <%= form_for @post do |f| %>
        <%= f.label :title %><br>
        <%= f.text_field :title %><br>

        <%= f.label :body %><br>
        <%= f.text_area :body %><br>

        <%= f.submit %>

    <% end %>

</div>
